<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorNeutral</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>

        <item name="android:actionMenuTextColor">@color/verylightgrey</item>
        <item name="actionMenuTextColor">@color/verylightgrey</item>
        <item name="dropDownListViewStyle">@style/AppTheme.CyburgerPopupMenu</item>



    </style>


    <style name="AppTheme.CyburgerPopupMenu" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:background">@color/redishBlack</item>
        <item name="android:textColor">@color/verylightgrey</item>
    </style>

    <style name="AppTheme.CyburgerButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_shape</item>

    </style>



    <style name="AppTheme.CyburgerSecondaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/secondary_button_shape</item>

    </style>


    <style name="AppTheme.CyburgerEditText" parent="Widget.AppCompat.EditText">

        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:textColor">@color/verylightgrey</item>
        <item name="android:textColorHint">@color/mediumgrey</item>
        <item name="android:textSize">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>

    </style>

    <style name="AppTheme.CyburgerContainer" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/container_shape</item>

    </style>

    <style name="AppTheme.CyburgerSpinner" parent="Widget.AppCompat.Spinner">

        <item name="android:background">@drawable/spinner_shape</item>
        <item name="android:textColor">@color/verylightgrey</item>
        <item name="android:dropDownItemStyle">@color/verylightgrey</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textSize">15dp</item>
    </style>


    <style name="AppTheme.CyburgerBadge" parent="Widget.AppCompat.EditText">

        <item name="android:background">@drawable/edit_text_shape</item>


    </style>

</resources>
