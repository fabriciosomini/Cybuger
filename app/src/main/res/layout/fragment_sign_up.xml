<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cynerds.cyburger.fragments.SignUpFragment">

    <com.cynerds.cyburger.components.JBEmail
        app:displayLabel="false"
        app:hint="@string/email_hint"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/JBEmail"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

    </com.cynerds.cyburger.components.JBEmail>

    <com.cynerds.cyburger.components.JBPassword
        app:displayLabel="false"
        app:hint="@string/password_hint"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpPassword"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/JBEmail"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

    </com.cynerds.cyburger.components.JBPassword>

    <com.cynerds.cyburger.components.JBPassword
        app:displayLabel="false"
        app:hint="@string/confirmPassword_hint"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpConfirm"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/signUpPassword"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

    </com.cynerds.cyburger.components.JBPassword>

    <com.cynerds.cyburger.components.JBButton
        android:layout_width="wrap_content"
        app:buttonText="@string/signUp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signUpConfirm"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/signUpConfirm"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/signUpConfirm"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"></com.cynerds.cyburger.components.JBButton>

</android.support.constraint.ConstraintLayout>
